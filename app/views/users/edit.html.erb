<div class="container">
  <div class="mt-4">
    <h3 class="font-weight-bold">マイページ編集</h3>
    <!--エラーメッセージ-->
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <!--編集フォーム-->
    <div class="mt-5">

      <%= form_with model: @user, url: user_path, method: :patch, local:true do |f| %>
        <div class="field row my-4">
          <label class="col-3">プロフィール画像</label>
            <%= image_tag @user.get_profile_image, size: "200x200", class: "user-icon" %>
            <div class="d-flex align-items-end">
              <%= f.file_field :profile_image, placeholder: "アイコン画像", accept: "image/*" %>
            </div>
        </div>
        <div class="field row mt-2">
          <label class="col-3">ユーザー名</label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-7 form-control" %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">自己紹介</label>
            <%= f.text_area :introduction, class: "col-7 form-control", rows: "4", placeholder: "例）コーヒー大好き" %>
        </div>

        <div class="field row mt-2">
          <label class="col-3">メールアドレス</label>
            <%= f.email_field :email, autocomplete: "email", class: "col-7 form-control" %>
        </div>

       <!--編集内容を保存ボタン-->
        <div class="action row mt-3">
          <div class="col-3"></div>
          <div>
            <%= f.submit "編集内容を保存",class: "btn btn-sm btn-success px-5 font-weight-bold" %>
          </div>
        </div>
      <% end %>
    </div>
    <!--退会ボタン-->
    <div class="actions row mt-5">
      <div class="col-7"></div>
      <div>
        <%#= link_to "退会する", customers_confirm_withdraw_path, class: "btn btn-sm btn-danger px-5" %>
      </div>
    </div>

  </div>
</div>