<h2>ログイン</h2>

<h5 class="col-12 mb-3 font-weight-bold">会員の方はこちらからログイン</h5>

<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

<h5>会員登録がお済みでない方</h5>
<p><%= render "devise/shared/links" %>から会員登録を行なってください。</p>
