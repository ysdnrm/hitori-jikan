<div class="container">

  <div class="row px-4">
    <h2 class="col-12 mb-5 font-weight-bold">ログイン</h2>
  </div>

    <div class="row ml-5">
      <h5 class="col-12 mb-3 font-weight-bold">会員の方はこちらからログイン</h5>
    </div>
    
    <div class="col-12 registrations">
      <%= form_with model: @user, url: user_session_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field row justify-content-center mt-2">
        <label class="col-2">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "col-6 form-control" %>
        </div>

        <div class="field row justify-content-center mt-2">
          <label class="col-2">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-6 form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field row justify-content-center mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center row my-5 ">
          <%= f.submit "ログインする",class: "btn btn-sm btn-primary px-5 mx-auto d-block" %>
        </div>
        
      <% end %>
    </div>

    <div class="row ml-5">
      <h5 class="col-12 px-4 mb-3 font-weight-bold">会員登録がお済みでない方</h5>
        <div class="ml-5 mt-2">
          <p><%= render "devise/shared/links" %>から会員登録を行なってください。</p>
        </div>
    </div>

</div>