<div class="container my-5">
  
  <div class="row px-4">
    <h2 class="col-12 mb-5 font-weight-bold">新規会員登録</h2>
  </div>
  
  <div class="col-12 registrations">
    <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field row mt-2">
      <label class="col-4">ユーザー名</label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-6 form-control", placeholder: 'ユーザー名' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">メールアドレス </label>
      <%= f.email_field :email, autocomplete: "email", class: "col-6 form-control", placeholder: 'xxxxxx@xxxx.com' %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">
        パスワード
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      </label>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-6 form-control" %>
    </div>

    <div class="field row mt-2">
      <label class="col-4">パスワード（確認用）</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-6 form-control" %>
    </div>

    <div class="actions row mt-3">
      <div class="col-4"> </div>
      <%= f.submit "新規登録する",class: "btn btn-sm btn-success px-5" %>
    </div>
    
    <% end %>

    <!--登録済みの方-->
    </div>
      <h4 class="col-12 px-4 mt-4 font-weight-bold">既に登録済みの方</h4>
        <div class="ml-5 mt-2">
          <p><%= render "devise/shared/links" %>からログインしてください。</P>
        </div>
    </div>
  
  </div>
</div>
