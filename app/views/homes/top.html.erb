<div class="container">
  <div class="row pt-3">

      <h4 class="mt-4 font-weight-bold">新着投稿</h4>
        <div class="row">
          <% @posts_latest4.each do |post| %>
          <div class="col-3">
            <%= link_to post_path(post.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
              <%= image_tag post.user.get_profile_image, size: "50x50", class:"mt-3 rounded-circle user-icon"; %>
              <%= post.user.name %>
              <% if post.images.attached? %>
                <%= image_tag post.images[0], class: "rounded", size:"200x150", style: "object-fit: cover;" %>
              <% else %>
                <%= image_tag('no_image.jpg', size: '200x150') %>
              <% end %>
              <p><%= post.shop_name %></p>
            <% end %>
          </div>
          <% end %>
        </div>
      <div class="text-right font-weight-bold mt-2"><%= link_to "全ての投稿を見る", posts_path %></div>



  </div>
</div>