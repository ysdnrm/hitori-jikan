<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-info">
    <div class="container mx-auto">
      <a class="navbar-brand " href="/"><%#= image_tag('na.png') %>ロゴ</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto row">
        <div class="login-name mx-auto text-light">
          <% if user_signed_in? %>
            <p>ようこそ <%= current_user.name %> さん！</p>
          <% elsif user_signed_in? && current_user.admin? %>
            <p>管理者　ログイン中</p>
          <% end %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %><!--ユーザーがログインしているとき-->
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              About
            <% end %>
          </li>
          <li>
            <%= link_to new_post_path, class: 'nav-link text-light' do %>
              投稿する
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class: 'nav-link text-light' do %>
              投稿一覧
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
              マイページ
            <% end %>
          </li>
          <li>
            <%= link_to confirm_posts_path, class: 'nav-link text-light' do %>
              下書き一覧
            <% end %>
          </li>

          <li>
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              ログアウト
            <% end %>
          </li>

          <li>
            <%= render 'layouts/search_form' %>
          </li>

           <% else %>  <!--ログインしていないとき-->

          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
               About
            <% end %>
          </li>

          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
               新規登録
            <% end %>
          </li>

          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-light' do %>
               ログイン
            <% end %>
          </li>

          <li>
            <%= link_to posts_path, class: 'nav-link text-light' do %>
              投稿一覧
            <% end %>
          </li>

          <li>
            <%= render 'layouts/search_form' %>
          </li>

        <% end %>
        </ul>
      </ul>
    </div>
    </div>
  </nav>
</header>